<Window
    x:Class="HeatingOptimizer.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vms="using:HeatingOptimizer.ViewModels"
    Title="Super Optimizing Power Heating System"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <!--  Adding a heading (label) to a project  -->
        <StackPanel Margin="20">
            <TextBlock
                Margin="0,5"
                FontSize="18"
                FontWeight="Bold">
                File entry
            </TextBlock>
            <TextBox Watermark="Enter the file path to the csv file" />
            <!--  adding a chart container (canvas)  -->
        </StackPanel>
        <StackPanel Margin="20">
            <!--  Adding a container for the buttons  -->
            <StackPanel>
                <Button />
                <Button />
                <Button />
            </StackPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <lvc:CartesianChart
                    Width="800"
                    Height="400"
                    Series="{Binding Series}" />
            </Grid>
        </StackPanel>
    </StackPanel>
    <Window.DataContext>
        <vms:ViewModel />
    </Window.DataContext>
</Window>
